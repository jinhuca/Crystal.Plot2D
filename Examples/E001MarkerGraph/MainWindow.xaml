<Window x:Class="E001MarkerGraph.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:crystal="http://schemas.crystal.com/Plot2D"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E001MarkerGraph"
        mc:Ignorable="d" Background="Black"
        Title="MainWindow" Height="450" Width="1200"
        Loaded="MainWindow_OnLoaded">
  <Window.Resources>
    <LinearGradientBrush x:Key="BackgroundBrush" StartPoint="0,0" EndPoint="0,1">
      <GradientStop Color="#FF494969" Offset="0.0"/>
      <GradientStop Color="#FF000000" Offset="0.5"/>
      <GradientStop Color="#FF494969" Offset="1.0"/>
    </LinearGradientBrush>
  </Window.Resources>
  <Grid>
    <crystal:Plotter x:Name="_plotter" Margin="30" Background="{StaticResource BackgroundBrush}">

    </crystal:Plotter>
  </Grid>
</Window>
