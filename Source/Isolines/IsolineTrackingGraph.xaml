<isolines:IsolineGraphBase x:Class="Crystal.Plot2D.Isolines.IsolineTrackingGraph"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:d3="clr-namespace:Crystal.Plot2D.Charts"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:isolines="clr-namespace:Crystal.Plot2D.Isolines">
  <isolines:IsolineGraphBase.Style>
    <Style TargetType="{x:Type isolines:IsolineGraphBase}">
      <Setter Property="Cursor" Value="Cross"/>
      <Setter Property="StrokeThickness" Value="3"/>
    </Style>
  </isolines:IsolineGraphBase.Style>

  <Canvas Name="content" Background="Transparent">
    <Grid Name="labelGrid" Visibility="Hidden" Panel.ZIndex="1">
      <Rectangle RadiusX="10" RadiusY="10" Stroke="DarkGray"
					   StrokeThickness="1" Fill="#AAFFFFFF"/>
      <TextBlock Name="textBlock" Margin="10,5,10,5"/>
    </Grid>
  </Canvas>
</isolines:IsolineGraphBase>
