<charts:LegendItem x:Class="Crystal.Plot2D.Charts.LineLegendItem"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:l="clr-namespace:Crystal.Plot2D"
              xmlns:charts="clr-namespace:Crystal.Plot2D.Charts" x:ClassModifier="internal">
  <charts:LegendItem.ContentTemplate>
    <DataTemplate>
      <StackPanel Orientation="Horizontal" Margin="0,1,0,1" ToolTip="{Binding Full}">
        <Line X1="3" X2="20" Y1="10" Y2="5" 
              Stroke="{Binding Stroke}" 
              StrokeThickness="{Binding StrokeThickness}"/>
        <TextBlock Text="{Binding Brief}" Margin="5,0,0,0"/>
      </StackPanel>
    </DataTemplate>
  </charts:LegendItem.ContentTemplate>
</charts:LegendItem>
